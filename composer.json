{
    "name": "ez-laravel/flash-messages",
    "description": "Easy flash messages for your Laravel application.",
    "authors": [
        {
            "name": "Nick Verheijen",
            "email": "verheijen.webdevelopment@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "EZ\\FlashMessages\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "EZ\\FlashMessages\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.3",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^9.1",
        "phpunit/php-code-coverage": "^8.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "EZ\\FlashMessages\\FlashServiceProvider"
            ],
            "aliases": {
                "Flash": "EZ\\FlashMessages\\FlashFacade"
            }
        }
    }
}
